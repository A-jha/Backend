<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include("helper/_header") %>
    <div class="p-5 bg-info bg-opacity-25">
      <h1 class="text-center">Login Form</h1>
      <form class="form card p-1" id="form">
        <div class="m-2">
          <label for="email">Email</label>
          <input class="w-100" name="email" type="email" id="email" required />
        </div>
        <div class="m-2">
          <label for="password">Password</label>
          <input
            class="w-100"
            name="password"
            type="password"
            id="password"
            required
          />
        </div>

        <div>
          <button class="btn btn-center w-100 btn-primary" type="submit">
            Submit
          </button>
        </div>
      </form>
    </div>
    <%- include("helper/_footer") %>

    <script>
      const form = document.getElementById("form");
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        const email = form.email.value;
        const password = form.password.value;

        console.log(email, password);
      });
    </script>
  </body>
</html>
