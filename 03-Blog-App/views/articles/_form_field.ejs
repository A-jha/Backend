<div class="card m-2 p-4">
  <div class="pb-2">
    <label for="title">Title</label>
    <input
      required
      class="p-2 w-100"
      type="text"
      name="title"
      id="title"
      value="<%= article.title %> "
    />
  </div>
  <div class="pb-2">
    <label for="description">Description</label>
    <textarea
      rows="2"
      required
      class="p-2 w-100"
      type="text"
      name="description"
      id="description"
    >
    <%= article.description %> 
    </textarea>
  </div>
  <div class="pb-2">
    <label for="markdown">Markdown</label>
    <textarea
      required
      class="p-2 w-100"
      type="text"
      name="markdown"
      id="markdown"
    >
    <%= article.markdown %> 
    </textarea>
  </div>
  <div class="pb-2 mt-3">
    <a class="btn btn-outline-dark" href="/">Cancel</a>
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</div>
