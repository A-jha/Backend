<div class="card m-2 p-4">
  <div class="pb-2">
    <label for="title">Title</label>
    <input required class="p-2 w-100" type="text" name="title" id="title" />
  </div>
  <div class="pb-2">
    <label for="description">Description</label>
    <textarea
      rows="2"
      required
      class="p-2 w-100"
      type="text"
      name="description"
      id="description"
    ></textarea>
  </div>
  <div class="pb-2">
    <label for="markdown">Markdown</label>
    <textarea
      required
      class="p-2 w-100"
      type="text"
      name="markdown"
      id="markdown"
    ></textarea>
  </div>
  <div class="pb-2 mt-3">
    <button class="btn btn-outline-dark" href="/articles">Cancel</button>
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</div>
